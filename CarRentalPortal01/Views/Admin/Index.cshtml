@using CarRentalPortal01.Models
@using CarRentalPortal01.Data
@using Microsoft.EntityFrameworkCore
@inject CarRentalDbContext _context

@{
    ViewData["Title"] = "Panel Özeti";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // --- 1. GARANTİ HESAPLAMALAR (Matematiksel Doğrulama) ---

    // Toplam Araç Sayısı
    int totalCars = _context.Vehicles.Count();

    // AKTİF KİRALAMALAR:
    // Başlangıç tarihi geçmiş (veya bugün) VE Bitiş tarihi gelmemiş (veya bugün) olanlar.
    // Yani şu an yolda olan araçlar.
    int activeRentals = 0;
    if (_context.Rentals.Any())
    {
        activeRentals = _context.Rentals.Count(r => r.StartDate <= DateTime.Now && r.EndDate >= DateTime.Now);
    }

    // BAKIMDAKİ ARAÇLAR (Eğer bakım modülü aktifse):
    // Bakım tablosunda olup 'IsCompleted' olmayanlar
    int carsInMaintenance = 0;
    if (_context.VehicleMaintenances.Any())
    {
        carsInMaintenance = _context.VehicleMaintenances.Count(m => !m.IsCompleted);
    }

    // GERÇEK MÜSAİT ARAÇ SAYISI:
    // Toplam - (Kiradakiler + Bakımdakiler)
    int availableCars = totalCars - (activeRentals + carsInMaintenance);

    // Eksiye düşerse 0 göster (Veri hatası koruması)
    if (availableCars < 0) availableCars = 0;

    // Müşteriler
    int totalUsers = _context.Users.Count();

    // Toplam Kazanç
    decimal totalEarnings = 0;
    if (_context.Rentals.Any())
    {
        totalEarnings = _context.Rentals.Sum(r => r.TotalPrice);
    }

    // --- 2. GRAFİK 1: MARKALAR ---
    var brandStats = _context.Vehicles
    .GroupBy(v => v.Brand)
    .Select(g => new { Name = g.Key, Count = g.Count() })
    .ToList();
    var brandNames = brandStats.Select(x => x.Name).ToList();
    var brandCounts = brandStats.Select(x => x.Count).ToList();

    // --- 3. GRAFİK 2: KATEGORİLER (DÜZELTİLDİ) ---
    // 'VehicleCategory' tablosuna bağlanıp İSİMLERİ (Name) çekiyoruz.
    var catStats = _context.Categories
    .Include(v => v.VehicleCategories) // İlişkili tabloyu dahil et
        .GroupBy(v => v.Name) // İsme göre grupla
        .Select(g => new { Name = g.Key, Count = g.Count() })
    .ToList();

    var catNames = catStats.Select(x => x.Name).ToList();
    var catCounts = catStats.Select(x => x.Count).ToList();

    // --- 4. PERFORMANS ---
    string mostPopularCar = "-";
    string topEarnerCar = "-";

    if (_context.Rentals.Any())
    {
        var popularId = _context.Rentals.GroupBy(r => r.VehicleId)
          .OrderByDescending(g => g.Count()).Select(g => g.Key).FirstOrDefault();
        var pCar = _context.Vehicles.Find(popularId);
        if (pCar != null) mostPopularCar = $"{pCar.Brand} {pCar.Model}";

        var earnerId = _context.Rentals.GroupBy(r => r.VehicleId)
          .OrderByDescending(g => g.Sum(s => s.TotalPrice)).Select(g => g.Key).FirstOrDefault();
        var eCar = _context.Vehicles.Find(earnerId);
        if (eCar != null) topEarnerCar = $"{eCar.Brand} {eCar.Model}";
    }

    var chartColorsList = new string[] { "#4e73df", "#1cc88a", "#36b9cc", "#f6c23e", "#e74a3b", "#858796", "#5a5c69", "#2e59d9" };
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Panel Özeti</h1>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Toplam Araç</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="lblTotalCars">@totalCars</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-car fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Müsait Araçlar</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="lblAvailableCars">@availableCars</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-check-circle fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Kirada Olan</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="lblActiveRentals">@activeRentals</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-road fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Toplam Kazanç</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800" id="lblTotalEarnings">@totalEarnings.ToString("C0")</div>
                    </div>
                    <div class="col-auto"><i class="fas fa-lira-sign fa-2x text-gray-300"></i></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Filo Doluluk Durumu</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">
                    Kullanım Oranı (Kirada + Bakımda)
                    <span class="float-right">
                        @if (totalCars > 0)
                        {
                            <text>@(((activeRentals + carsInMaintenance) * 100) / totalCars)%</text>
                        }
                        else
                        {
                            <text>0%</text>
                        }
                    </span>
                </h4>
                <div class="progress mb-4">
                    @{
                        int percentage = totalCars > 0 ? ((activeRentals + carsInMaintenance) * 100) / totalCars : 0;
                    }
                    <div class="progress-bar bg-danger" role="progressbar" style="width: @percentage%"
                                      aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="text-xs text-muted">
                    * Kiradaki Araçlar: @activeRentals <br />
                    * Bakımdaki Araçlar: @carsInMaintenance
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Marka Dağılımı</h6>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-7">
                        <div class="chart-pie pt-2 pb-2">
                            <canvas id="brandChart"></canvas>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="mt-4 text-left small">
                            @for (int i = 0; i < brandNames.Count; i++)
                            {
                                var color = chartColorsList[i % chartColorsList.Length];
                                <div class="mb-2">
                                    <span class="mr-2"><i class="fas fa-circle" style="color: @color;"></i> @brandNames[i]</span>
                                    <span class="float-right font-weight-bold">@brandCounts[i]</span>
                                </div>
                                <hr class="my-1">
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Kategori Dağılımı</h6>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-5">
                        <div class="mt-4 text-left small">
                            @for (int i = 0; i < catNames.Count; i++)
                            {
                                var color = chartColorsList[i % chartColorsList.Length];
                                <div class="mb-2">
                                    <span class="mr-2"><i class="fas fa-circle" style="color: @color;"></i> @catNames[i]</span>
                                    <span class="float-right font-weight-bold">@catCounts[i]</span>
                                </div>
                                <hr class="my-1">
                            }
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="chart-pie pt-2 pb-2">
                            <canvas id="categoryChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="col-lg-6">

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">Performans Özeti</h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <div class="small text-gray-500">En Çok Kiralanan Araç</div>
                    <div class="h5 font-weight-bold text-gray-800">
                        <i class="fas fa-trophy text-warning mr-2"></i> @mostPopularCar
                    </div>
                </div>
                <hr>
                <div>
                    <div class="small text-gray-500">En Çok Ciro Yapan Araç</div>
                    <div class="h5 font-weight-bold text-gray-800">
                        <i class="fas fa-money-bill-wave text-success mr-2"></i> @topEarnerCar
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Kiralama Takvimi</h6>
                <a href="/Admin/Scheduler" class="text-xs font-weight-bold text-primary text-uppercase mb-1">DETAYLI GÖR</a>
            </div>
            <div class="card-body">
                <div id='miniCalendar' style="min-height: 320px;"></div>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sistem Durumu</h6>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-center">
                        <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 15rem;"
                                            src="~/Admin/img/undraw_posting_photo.svg" alt="...">
                    </div>
                    <div class="col-md-9">
                        <p>Sistem aktif ve veri akışı normal. 🚀</p>
                        <p class="mb-0">Veriler anlık kiralamalara göre hesaplanmaktadır.</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts 
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder().withUrl("/carhub").build();

        connection.start().then(function () {
            console.log("SignalR Bağlandı 📡");
        }).catch(function (err) {
            return console.error(err.toString());
        });

        connection.on("ReceiveDashboardUpdate", function (totalCars, availableCars, activeRentals, totalEarnings) {
            document.getElementById("lblTotalCars").innerText = totalCars;
            document.getElementById("lblAvailableCars").innerText = availableCars;
            document.getElementById("lblActiveRentals").innerText = activeRentals;
            document.getElementById("lblTotalEarnings").innerText = totalEarnings + " ₺";
        });
    </script>
    <script src="~/Admin/vendor/chart.js/Chart.min.js"></script>
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>

    <script>

        // ORTAK RENKLER
        var chartColors = ['#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b', '#858796', '#5a5c69', '#2e59d9'];

        // --- 1. MARKA GRAFİĞİ (BrandChart) ---
        var brandLabels = @Html.Raw(Json.Serialize(brandNames));
        var brandData = @Html.Raw(Json.Serialize(brandCounts));
        var ctxBrand = document.getElementById("brandChart");

        if (ctxBrand) {
            new Chart(ctxBrand, {
                type: 'doughnut',
                data: {
                    labels: brandLabels,
                    datasets: [{
                        data: brandData,
                        backgroundColor: chartColors,
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    tooltips: {
                        backgroundColor: "rgb(255,255,255)",
                        bodyFontColor: "#858796",
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        xPadding: 15,
                        yPadding: 15,
                        displayColors: true,
                        caretPadding: 10,
                    },
                    legend: { display: false },
                    cutoutPercentage: 0,
                },
            });
        }

        // --- 2. KATEGORİ GRAFİĞİ (CategoryChart) ---
        var catLabels = @Html.Raw(Json.Serialize(catNames));
        var catData = @Html.Raw(Json.Serialize(catCounts));
        var ctxCat = document.getElementById("categoryChart");

        if (ctxCat) {
            new Chart(ctxCat, {
                type: 'doughnut',
                data: {
                    labels: catLabels,
                    datasets: [{
                        data: catData,
                        backgroundColor: chartColors,
                        hoverBorderColor: "rgba(234, 236, 244, 1)",
                    }],
                },
                options: {
                    maintainAspectRatio: false,
                    tooltips: {
                        backgroundColor: "rgb(255,255,255)",
                        bodyFontColor: "#858796",
                        borderColor: '#dddfeb',
                        borderWidth: 1,
                        xPadding: 15,
                        yPadding: 15,
                        displayColors: true,
                        caretPadding: 10,
                    },
                    legend: { display: false },
                    cutoutPercentage: 0,
                },
            });
        }

        // --- 3. MİNİ TAKVİM ---
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('miniCalendar');
            if (calendarEl) {
                var miniCalendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'listMonth',
                    locale: 'tr',
                    headerToolbar: { left: 'prev,next', center: 'title', right: '' },
                    height: 350,
                    events: '/Admin/GetCalendarEvents',
                    eventColor: '#1cc88a',
                    noEventsContent: 'Bu ay kiralama yok',
                    eventClick: function(info) {
                        window.location.href = "/Admin/Scheduler";
                    }
                });
                miniCalendar.render();
            }
        });
    </script>
}