@model IEnumerable<CarRentalPortal01.ViewModels.FinancialItemViewModel>

@{
    ViewData["Title"] = "Finans Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    decimal income = ViewBag.TotalIncome;
    decimal expense = ViewBag.TotalExpense;
    decimal retained = ViewBag.NetProfit;
}

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Toplam Ciro</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@income.ToString("C2")</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Toplam Gider (Maaşlar Dahil)</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@expense.ToString("C2")</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Şirket Kasası (%20)</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@retained.ToString("C2")</div>
                <small>Patron payı ödendikten sonra kalan</small>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Finansal Hareketler ve Maaşlar</h6>
        <a asp-action="ExpenseUpsert" class="btn btn-danger btn-sm">
            <i class="fas fa-plus"></i> Manuel Gider Ekle
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="ExpenseTable" width="100%">
                <thead>
                    <tr>
                        <th>Gider / İşlem Adı</th>
                        <th>Kategori</th>
                        <th>Detaylar</th>
                        <th>Tarih</th>
                        <th>Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="font-weight-bold">
                                @if (item.ColorClass.Contains("success"))
                                {
                                    <i class="fas fa-arrow-up text-success mr-2"></i>
                                }
                                else
                                {
                                    <i class="fas fa-arrow-down text-danger mr-2"></i>
                                }
                                @item.Title
                            </td>
                            <td>
                                <span class="badge badge-light border @item.ColorClass">@item.Type</span>
                            </td>
                            <td class="small text-muted">@item.Details</td>
                            <td>@item.Date.ToString("dd.MM.yyyy")</td>
                            <td class="font-weight-bold @item.ColorClass">
                                @if (item.ColorClass.Contains("success"))
                                {
                                    <span>+@item.Amount.ToString("C2")</span>
                                }
                                else
                                {
                                    <span>-@item.Amount.ToString("C2")</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#ExpenseTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json" },
                "order": [[2, "desc"]]
            });
        });
    </script>
}