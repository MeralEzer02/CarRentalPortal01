@model IEnumerable<CarRentalPortal01.Models.VehicleMaintenance>

@{
    ViewData["Title"] = "Bakım ve Servis Takibi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Bakım ve Servis Takibi</h1>
    <button type="button" class="btn btn-warning shadow-sm" onclick="openModal(0)">
        <i class="fas fa-plus fa-sm text-white-50 mr-2"></i> Yeni Bakım Kaydı
    </button>
</div>

<div class="card shadow mb-4 border-left-warning">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-warning">Servis Geçmişi ve Aktif Bakımlar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="MaintenanceTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Görsel</th> <th>Araç Plakası</th>
                        <th>Bakım Türü</th>
                        <th>Açıklama</th> <th>Tarihler</th>
                        <th>Maliyet</th>
                        <th style="width: 120px;">Durum (Tıkla)</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="/@item.Vehicle.ImageUrl" alt="Araç Resmi"
                                     width="100" height="70" 
                                     style="object-fit:cover; border-radius:5px; border:1px solid #ddd; cursor:pointer;" />
                            </td>
                
                            <td class="align-middle font-weight-bold">
                                @if (item.Vehicle != null)
                                {
                                    @item.Vehicle.LicensePlate <br />
                                    <small class="text-muted">@item.Vehicle.Brand @item.Vehicle.Model</small>
                                }
                                else
                                {
                                    <span class="text-danger">Silinmiş</span>
                                }
                            </td>
                            <td class="align-middle">@item.MaintenanceType</td>
                            <td class="align-middle small">@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                            <td class="align-middle small">
                                <div><i class="fas fa-sign-in-alt text-warning mr-1"></i> @item.StartDate.ToString("dd.MM.yy HH:mm")</div>
                                <div><i class="fas fa-sign-out-alt text-success mr-1"></i> @(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd.MM.yy HH:mm") : "---")</div>
                            </td>
                            <td class="align-middle text-danger font-weight-bold">@item.Cost.ToString("C2")</td>
                            <td class="align-middle text-center">
                                <div style="cursor: pointer;" onclick="toggleStatus(@item.Id)">
                                    @if (item.IsCompleted)
                                    {
                                        <span class="badge badge-success p-2 w-100 shadow-sm">
                                            <i class="fas fa-check-circle mr-1"></i> Tamamlandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning p-2 w-100 shadow-sm">
                                            <i class="fas fa-tools fa-spin mr-1"></i> Serviste
                                        </span>
                                    }
                                </div>
                            </td>
                            <td class="align-middle text-center">
                                <button onclick="openModal(@item.Id)" class="btn btn-primary btn-sm" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </button>
                                
                                <a href="javascript:void(0);" 
                                   onclick="deleteMaintenance(@item.Id)" 
                                   class="btn btn-danger btn-sm" 
                                   title="Sil">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="modalPlaceHolder"></div>

@section Scripts {
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#MaintenanceTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json" },
                "order": [[6, "asc"], [4, "desc"]] 
            });
        });

        function openModal(id) {
            $.get("/Admin/AddMaintenance", { id: id }, function (data) {
                $("#modalPlaceHolder").html(data);
                $("#AddMaintenanceModal").modal("show");
            });
        }

        function toggleStatus(id) {
            $.post("/Admin/ToggleMaintenanceStatus", { id: id }, function (res) {
                if (res.success) {
                    location.reload();
                } else {
                    Swal.fire('Hata', res.message, 'error');
                }
            });
        }

        function deleteMaintenance(id) {
            Swal.fire({
                title: 'Silmek istediğine emin misin?',
                text: "Bu işlem geri alınamaz! Bakım kaydı silinecek.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Admin/DeleteMaintenance/' + id;
                }
            })
        }
    </script>
}}