@model IEnumerable<CarRentalPortal01.Models.Rental>

@{
    ViewData["Title"] = "Kiralama İşlemleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Kiralama İşlemleri</h1>
<p class="mb-4">Araç kiralama geçmişini ve aktif kiralamaları buradan takip edebilirsiniz.</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kiralama Listesi</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Müşteri</th>
                        <th>İletişim</th>
                        <th>Araç</th>
                        <th>Başlangıç</th>
                        <th>Bitiş</th>
                        <th>Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                @if (item.User != null)
                                {
                                    <span class="font-weight-bold">
                                        @(string.IsNullOrEmpty(item.User.UserName) ? item.User.Email : item.User.UserName)
                                    </span>
                                }
                                else
                                {
                                    <span class="text-danger">Kullanıcı Silinmiş</span>
                                }
                            </td>
                            <td>
                                @if (item.User != null)
                                {
                                    <div><small><i class="fas fa-envelope"></i> @item.User.Email</small></div>
                                    @if (!string.IsNullOrEmpty(item.User.PhoneNumber))
                                    {
                                        <div><small><i class="fas fa-phone"></i> @item.User.PhoneNumber</small></div>
                                    }
                                }
                            </td>
                            <td>
                                @if (item.Vehicle != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <img src="/@item.Vehicle.ImageUrl" style="width: 80px; height: 50px; object-fit: cover; border-radius: 3px; margin-right: 5px;" />
                                        <div>
                                            <span class="badge badge-primary">@item.Vehicle.Brand</span>
                                            <span class="small d-block">@item.Vehicle.Model</span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-danger">Araç Silinmiş</span>
                                }
                            </td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td class="text-success font-weight-bold">@item.TotalPrice.ToString("C2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>