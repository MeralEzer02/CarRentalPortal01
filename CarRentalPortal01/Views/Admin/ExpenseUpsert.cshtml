@model CarRentalPortal01.Models.Expense

@{
    ViewData["Title"] = "Gider Ekle/Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-left-danger">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Gider Kaydı</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ExpenseUpsert">
                    <input asp-for="Id" hidden />

                    <div class="form-group">
                        <label>Gider Başlığı</label>
                        <input asp-for="Title" class="form-control" placeholder="Örn: Personel Maaşları" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Tutar (TL)</label>
                        <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Tarih</label>
                        <input asp-for="Date" type="date" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama (Opsiyonel)</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>

                    <button type="submit" class="btn btn-danger btn-block">Kaydet</button>
                    <a asp-action="ExpenseList" class="btn btn-secondary btn-block">Vazgeç</a>
                </form>
            </div>
        </div>
    </div>
</div>