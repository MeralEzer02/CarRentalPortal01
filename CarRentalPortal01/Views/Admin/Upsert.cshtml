@model CarRentalPortal01.ViewModels.VehicleUpsertViewModel

@{
    // Başlık dinamik olsun: ID varsa "Güncelle", yoksa "Ekle"
    var title = Model.Vehicle.Id != 0 ? "Araç Güncelle" : "Araç Ekle";
    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@title</h6>
    </div>
    <div class="card-body">
        <form method="post" asp-action="Upsert">
            <input asp-for="Vehicle.Id" hidden />

            <div class="row">
                <div class="col-md-6 form-group">
                    <label>Marka</label>
                    <input asp-for="Vehicle.Brand" class="form-control" placeholder="Örn: BMW" />
                </div>
                <div class="col-md-6 form-group">
                    <label>Model</label>
                    <input asp-for="Vehicle.Model" class="form-control" placeholder="Örn: M5 Sedan" />
                </div>
            </div>

            <div class="form-group">
                <label class="font-weight-bold text-primary">Araç Kategorileri (Çoklu Seçim)</label>
                <select asp-for="SelectedCategoryIds" asp-items="@Model.CategoryList" class="form-control" multiple style="height: 150px;">
                </select>
                <small class="form-text text-muted">Birden fazla kategori seçmek için <b>CTRL</b> tuşuna basılı tutarak tıklayın.</small>
            </div>

            <div class="row">
                <div class="col-md-4 form-group">
                    <label>Yıl</label>
                    <input asp-for="Vehicle.Year" type="number" class="form-control" />
                </div>
                <div class="col-md-4 form-group">
                    <label>Plaka</label>
                    <input asp-for="Vehicle.LicensePlate" class="form-control" />
                </div>
                <div class="col-md-4 form-group">
                    <label>Günlük Ücret (₺)</label>
                    <input asp-for="Vehicle.DailyRentalRate" type="number" step="0.01" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label>Resim URL</label>
                <input asp-for="Vehicle.ImageUrl" class="form-control" placeholder="https://..." />
                <small class="form-text text-muted">İnternetten bulduğunuz bir resim bağlantısını yapıştırın.</small>
            </div>

            <div class="row">
                <div class="col-md-3 form-group">
                    <label>Renk</label>
                    <input asp-for="Vehicle.Color" class="form-control" placeholder="Örn: Siyah" />
                </div>

                <div class="col-md-3 form-group">
                    <label>Yakıt Tipi</label>
                    <select asp-for="Vehicle.FuelType" class="form-control">
                        <option value="">Seçiniz</option>
                        <option value="Benzin">Benzin</option>
                        <option value="Dizel">Dizel</option>
                        <option value="Elektrik">Elektrik</option>
                        <option value="Hibrit">Hibrit</option>
                    </select>
                </div>

                <div class="col-md-3 form-group">
                    <label>Vites</label>
                    <select asp-for="Vehicle.GearType" class="form-control">
                        <option value="">Seçiniz</option>
                        <option value="Otomatik">Otomatik</option>
                        <option value="Manuel">Manuel</option>
                        <option value="Yarı Otomatik">Yarı Otomatik</option>
                    </select>
                </div>

                <div class="col-md-3 form-group">
                    <label>Kilometre</label>
                    <input asp-for="Vehicle.Kilometer" type="number" class="form-control" placeholder="Örn: 15000" />
                </div>
            </div>

            <div class="form-group">
                <label>Varyant Grup Kodu (Opsiyonel)</label>
                <input asp-for="Vehicle.VariantGroupId" class="form-control" placeholder="(Aynı gruptaki araçlara aynı kodu yazın)" />
                <small class="text-muted">Eğer bu aracın farklı renkleri varsa, hepsine aynı Grup Kodunu vererek sitede birbirine bağlayabilirsiniz.</small>
            </div>

            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Vehicle.Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="form-group form-check">
                <input asp-for="Vehicle.IsAvailable" class="form-check-input" />
                <label class="form-check-label">Araç Müsait mi?</label>
            </div>

            <button type="submit" class="btn btn-primary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-save"></i>
                </span>
                <span class="text">Kaydet</span>
            </button>
            <a asp-action="VehicleList" class="btn btn-secondary">Listeye Dön</a>
        </form>
    </div>
</div>