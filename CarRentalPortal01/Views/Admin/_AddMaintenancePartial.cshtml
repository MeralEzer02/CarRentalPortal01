@model CarRentalPortal01.Models.VehicleMaintenance

<div class="modal fade" id="AddMaintenanceModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-left-warning">
            <div class="modal-header bg-light">
                <h5 class="modal-title text-warning font-weight-bold">
                    <i class="fas fa-tools mr-2"></i> @(Model.Id == 0 ? "Yeni Bakım Kaydı" : "Bakım Düzenle")
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form asp-controller="Admin" asp-action="AddMaintenance" method="post">
                <div class="modal-body">
                    <input asp-for="Id" hidden />

                    <div class="form-group">
                        <label class="font-weight-bold">Araç Seçimi</label>
                        @if (Model.Id == 0 && Model.VehicleId != 0)
                        {
                            <input asp-for="VehicleId" hidden />
                            <input type="text" class="form-control" value="Seçilen Araç (ID: @Model.VehicleId)" disabled />
                        }
                        else
                        {
                            <select asp-for="VehicleId" class="form-control" asp-items="@ViewBag.VehicleList">
                                <option value="">-- Araç Seçin --</option>
                            </select>
                        }
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Bakım Türü</label>
                        <select asp-for="MaintenanceType" class="form-control">
                            <option value="Periyodik Bakım">Periyodik Bakım (Yağ/Filtre)</option>
                            <option value="Hasar/Kaza">Hasar / Kaza Onarımı</option>
                            <option value="Lastik Değişimi">Lastik Değişimi</option>
                            <option value="Muayene">Muayene Hazırlık</option>
                            <option value="Diğer">Diğer</option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Başlangıç Tarihi</label>
                                <input asp-for="StartDate" type="datetime-local" class="form-control"
                                       value="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Tahmini Bitiş</label>
                                <input asp-for="EndDate" type="datetime-local" class="form-control"
                                       value="@(Model.EndDate?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Maliyet (TL)</label>
                        <input asp-for="Cost" type="number" step="0.01" class="form-control" placeholder="0.00" />
                    </div>

                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Detaylar..."></textarea>
                    </div>

                    @if (Model.Id != 0)
                    {
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" asp-for="IsCompleted" />
                            <label class="form-check-label font-weight-bold">Bakım Tamamlandı mı?</label>
                        </div>
                    }

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save mr-1"></i> @(Model.Id == 0 ? "Kaydet" : "Güncelle")
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>