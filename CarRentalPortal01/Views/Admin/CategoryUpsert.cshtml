@model CarRentalPortal01.ViewModels.CategoryUpsertViewModel

@{
    var title = Model.Category.Id != 0 ? "Kategori Güncelle" : "Kategori Ekle";
    ViewData["Title"] = title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@title</h6>
    </div>
    <div class="card-body">
        <form method="post" asp-action="CategoryUpsert">
            <input asp-for="Category.Id" hidden />

            <div class="form-group">
                <label>Kategori Adı</label>
                <input asp-for="Category.Name" class="form-control" required />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="font-weight-bold text-primary">Bu Kategoriye Dahil Araçlar (Çoklu Seçim)</label>
                <select asp-for="SelectedVehicleIds" asp-items="@Model.VehicleList" class="form-control" multiple style="height: 200px;">
                </select>
                <small class="form-text text-muted">Birden fazla araç seçmek için <b>CTRL</b> tuşuna basılı tutarak tıklayın.</small>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a asp-action="CategoryList" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>