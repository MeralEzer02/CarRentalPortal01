@model IEnumerable<CarRentalPortal01.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var customers = Model.Where(u => u.Role == 0).ToList();
    var staff = Model.Where(u => u.Role == 1 || u.Role == 2).ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kullanıcı Yönetimi</h1>
    <a asp-action="UserUpsert" class="btn btn-primary shadow-sm">
        <i class="fas fa-user-plus fa-sm text-white-50 mr-2"></i> Yeni Kullanıcı Ekle
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <ul class="nav nav-tabs card-header-tabs" id="userTabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="customers-tab" data-toggle="tab" href="#customers" role="tab" aria-selected="true">
                    <i class="fas fa-users"></i> Müşteriler (@customers.Count)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="staff-tab" data-toggle="tab" href="#staff" role="tab" aria-selected="false">
                    <i class="fas fa-id-badge"></i> Personel ve Yönetim (@staff.Count)
                </a>
            </li>
        </ul>
    </div>

    <div class="card-body">
        <div class="tab-content" id="userTabsContent">

            <div class="tab-pane fade show active" id="customers" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="CustomerTable" width="100%">
                        <thead>
                            <tr>
                                <th>Profil</th>
                                <th>Ad Soyad</th>
                                <th>İletişim</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in customers)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.DriverLicenseImage))
                                        {
                                            <img src="@item.DriverLicenseImage" width="50" height="50" style="object-fit:cover; border-radius:50%;" />
                                        }
                                        else
                                        {
                                            <div class="btn btn-circle btn-secondary"><i class="fas fa-user"></i></div>
                                        }
                                    </td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email <br /> <small>@item.PhoneNumber</small></td>
                                    <td>
                                        <a asp-action="UserUpsert" asp-route-id="@item.UserId" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                                        @if (User.IsInRole("2"))
                                        {
                                            <a href="/Admin/DeleteUser/@item.UserId" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="tab-pane fade" id="staff" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-bordered" id="StaffTable" width="100%">
                        <thead class="thead-dark">
                            <tr>
                                <th>Profil</th>
                                <th>Personel</th>
                                <th>Rolü</th>
                                <th>Aylık Maaş</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in staff)
                            {
                                <tr class="@(item.Role == 2 ? "bg-light border-left-primary" : "")">
                                    <td>
                                        <div class="btn btn-circle @(item.Role == 2 ? "btn-primary" : "btn-info")">
                                            <i class="fas @(item.Role == 2 ? "fa-user-tie" : "fa-user-tag")"></i>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>@item.UserName</strong>
                                        <div class="small text-muted">@item.Email</div>
                                    </td>
                                    <td>
                                        @if (item.Role == 2)
                                        {
                                            <span class="badge badge-primary p-2">Süper Admin (Patron)</span>
                                        }
                                        else
                                        {

                                            <span class="badge badge-info p-2">Personel</span>
                                        }
                                    </td>
                                    <td class="font-weight-bold text-dark">
                                        @if (item.Role == 2)
                                        {
                                            <span class="text-success" title="Otomatik Hesaplanan %80 Kâr Payı">
                                                @(((decimal)ViewBag.CalculatedPatronShare).ToString("C2"))
                                            </span>
                                            <div class="small text-muted font-italic">*Anlık Kâr Payı</div>
                                        }
                                        else
                                        {
                                            @item.Salary.ToString("C2")
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="UserUpsert" asp-route-id="@item.UserId" class="btn btn-warning btn-sm">Düzenle</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>