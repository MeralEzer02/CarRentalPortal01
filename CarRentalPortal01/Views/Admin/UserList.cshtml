@model IEnumerable<CarRentalPortal01.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Arama kutusunu sağa yasla */
    div.dataTables_wrapper div.dataTables_filter {
        text-align: right;
    }

    .dataTables_wrapper {
        padding: 10px;
    }

    /* Tablo başlıkları */
    #UserTable thead th {
        background-color: #f8f9fc;
        color: #4e73df;
        border-bottom: 2px solid #e3e6f0;
    }
</style>

<h1 class="h3 mb-2 text-gray-800">Kullanıcı Yönetimi</h1>
<p class="mb-4">Sisteme kayıtlı kullanıcıları ve yetkilerini buradan görebilirsiniz.</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Kayıtlı Kullanıcılar</h6>
            <a class="nav-link btn btn-primary btn-sm text-white" asp-controller="Admin" asp-action="UserUpsert">
                <i class="fas fa-fw fa-plus"></i>
                <span>Kullanıcı Ekle</span>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="UserTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#ID</th>
                        <th>Kullanıcı</th>
                        <th>Rol</th>
                        <th>Kiralama Geçmişi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserId</td>
                            <td>
                                <div class="font-weight-bold">@item.UserName</div>
                                <div class="small text-muted">@item.Email</div>
                            </td>
                            <td>
                                @if (item.Role == 1)
                                {
                                    <span class="badge badge-primary">Yönetici (Admin)</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Kullanıcı</span>
                                }
                            </td>

                            <td>
                                @if (item.Rentals != null && item.Rentals.Any())
                                {
                                    foreach (var rent in item.Rentals.OrderByDescending(r => r.EndDate))
                                    {
                                        bool isActive = rent.EndDate >= DateTime.Now;
                                        string badgeClass = isActive ? "badge-success" : "badge-secondary";
                                        string statusText = isActive ? "(Aktif)" : "";

                                        // Araç null kontrolü ile yazdırılıyor
                                        <span class="badge @badgeClass mr-1 mb-1">
                                            @rent.Vehicle?.Brand @rent.Vehicle?.Model @statusText
                                        </span>
                                        <br>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted small">-</span>
                                }
                            </td>

                            <td>
                                @if (User.Identity.Name != item.Email)
                                {
                                    <span class="text-muted small">Pasif Oturum</span>
                                }
                                else
                                {
                                    <span class="text-success small font-weight-bold">Aktif Oturum</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Admin" asp-action="UserUpsert" asp-route-id="@item.UserId"
                                       class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Düzenle
                                    </a>

                                    <a href="javascript:void(0);"
                                       class="btn btn-danger btn-sm"
                                       onclick="deleteUser('/Admin/DeleteUser/@item.UserId', '@item.UserName')">
                                        <i class="fas fa-trash"></i> Sil
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#UserTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json"
                },
                "order": [[0, "asc"]], // ID'ye göre sırala
                "lengthChange": true,
                "searching": true,
                "paging": true
            });
        });

        function deleteUser(url, userName) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: userName + " isimli kullanıcıyı silmek üzeresiniz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            })
        }
    </script>
}