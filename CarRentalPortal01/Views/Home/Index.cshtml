@using CarRentalPortal01.Data
@inject CarRentalDbContext _context
@model IEnumerable<CarRentalPortal01.Models.Vehicle>

@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    // --- İSTATİSTİKLER ---
    int totalCars = _context.Vehicles.Count();
    int totalCustomers = _context.Users.Count(u => u.Role == 0);
    int experience = DateTime.Now.Year - 2020;
    if (experience < 1) experience = 1;
    int totalBranches = 4;

    var featuredCars = Model;
    if (featuredCars == null || !featuredCars.Any())
    {
        featuredCars = _context.Vehicles.OrderByDescending(x => x.Id).Take(6).ToList();
    }
}

<div class="hero-wrap ftco-degree-bg" style="background-image: url('/Frontend/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text justify-content-start align-items-center justify-content-center">
            <div class="col-lg-8 ftco-animate">
                <div class="text w-100 text-center mb-md-5 pb-md-5">
                    <h1 class="mb-4">Hızlı &amp; Kolay Araç Kiralama</h1>
                    <p style="font-size: 18px;">Hayalinizdeki yolculuğa çıkmak için en uygun aracı bulun. Konfor ve güven bir arada.</p>

                    <a href="/About/Index" class="icon-wrap d-flex align-items-center mt-4 justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="ion-ios-play"></span>
                        </div>
                        <div class="heading-title ml-5">
                            <span>Nasıl Kiralarım?</span>
                        </div>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">

                    <div class="col-md-4 d-flex align-items-center">
                        <form action="/Cars/Index" method="get" class="request-form ftco-animate bg-primary">
                            <h2>Hemen Kirala</h2>

                            <div class="form-group">
                                <label class="label">Alış Yeri</label>
                                <input type="text" class="form-control" placeholder="Şehir veya Havalimanı">
                            </div>

                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label class="label">Alış Tarihi</label>
                                    <input type="date" class="form-control" name="startDate">
                                </div>
                                <div class="form-group ml-2">
                                    <label class="label">İade Tarihi</label>
                                    <input type="date" class="form-control" name="endDate">
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Uygun Araçları Listele" class="btn btn-secondary py-3 px-4">
                            </div>
                        </form>
                    </div>

                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Aracınızı Kiralamanın En Kolay Yolu</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Aracını Seç</h3>
                                            <p>Geniş filomuzdan ihtiyacına en uygun aracı beğen.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Tarihleri Belirle</h3>
                                            <p>Kiralama süreni seç ve anında fiyatı gör.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Yola Çık</h3>
                                            <p>Ofisimizden aracını teslim al ve keyfine bak.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="/Cars/Index" class="btn btn-primary py-3 px-4">Tüm Araçları Gör</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Fırsatlar</span>
                <h2 class="mb-2">Vitrin Araçları</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">

                    @if (featuredCars != null && featuredCars.Any())
                    {
                        @foreach (var car in featuredCars)
                        {
                            <div class="item">
                                <div class="car-wrap rounded ftco-animate">
                                    <div class="img rounded d-flex align-items-end"
                                         style="background-image: url('/@car.ImageUrl'); height: 250px;">
                                    </div>

                                    <div class="text">
                                        <h2 class="mb-0"><a href="/Cars/CarDetail/@car.Id">@car.Brand @car.Model</a></h2>
                                        <div class="d-flex mb-3">
                                            <span class="cat">@car.GearType / @car.FuelType</span>
                                            <p class="price ml-auto">@car.DailyRentalRate.ToString("C0") <span>/gün</span></p>
                                        </div>

                                        <p class="d-flex mb-0 d-block">
                                            <a href="/Cars/Rent/@car.Id" class="btn btn-primary py-2 mr-1">Kirala</a>
                                            <a href="/Cars/CarDetail/@car.Id" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <p>Şu anda vitrinde gösterilecek araç bulunmuyor.</p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-about">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url('/Frontend/images/about.jpg');">
            </div>
            <div class="col-md-6 wrap-about ftco-animate">
                <div class="heading-section heading-section-white pl-md-5">
                    <span class="subheading">Hakkımızda</span>
                    <h2 class="mb-4">Güvenli Yolculuğun Adresi</h2>
                    <p>Müşteri memnuniyetini ön planda tutan hizmet anlayışımızla, yolculuklarınızı keyfe dönüştürüyoruz. Geniş araç filomuz ve profesyonel ekibimizle hizmetinizdeyiz.</p>
                    <p>Bakımlı, sigortalı ve konforlu araçlarımızla yola güvenle çıkın.</p>
                    <p><a href="/Cars/Index" class="btn btn-primary py-3 px-4">Hemen Araç Bul</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Hizmetler</span>
                <h2 class="mb-3">Size Özel Çözümler</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-wedding-car"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Düğün & Özel Gün</h3>
                        <p>En özel günleriniz için lüks ve konforlu seçenekler.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-transportation"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Transfer Hizmeti</h3>
                        <p>Şehir içi veya şehirler arası güvenli transfer.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-car"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Havalimanı Transfer</h3>
                        <p>Uçuş saatlerinize uygun dakik karşılama.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-transportation"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Filo Kiralama</h3>
                        <p>Şirketler için uzun dönem avantajlı kiralama.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-intro" style="background-image: url('/Frontend/images/bg_2.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-6 heading-section heading-section-white ftco-animate">
                <h2 class="mb-3">Ayrıcalıklardan Yararlanın</h2>
                <p>Üye olun, indirimli fiyatlardan ve kampanyalardan ilk siz haberdar olun. Kiralama işlemlerinizi hızlandırın.</p>
                <a href="/Auth/Register" class="btn btn-primary btn-lg">Hemen Üye Ol</a>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section testimony-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Referanslar</span>
                <h2 class="mb-3">Mutlu Müşteriler</h2>
            </div>
        </div>
        <div class="row ftco-animate">
            <div class="col-md-12">
                <div class="carousel-testimony owl-carousel ftco-owl">
                    <div class="item">
                        <div class="testimony-wrap rounded text-center py-4 pb-5">
                            <div class="user-img mb-2" style="background-image: url('/Frontend/images/person_1.jpg')">
                            </div>
                            <div class="text pt-4">
                                <p class="mb-4">Son derece profesyonel bir hizmet aldım. Araç tertemizdi.</p>
                                <p class="name">Ahmet Yılmaz</p>
                                <span class="position">Müşteri</span>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="testimony-wrap rounded text-center py-4 pb-5">
                            <div class="user-img mb-2" style="background-image: url('/Frontend/images/person_2.jpg')">
                            </div>
                            <div class="text pt-4">
                                <p class="mb-4">İnternet sitesi çok kullanışlı, kiralama işlemi çok hızlıydı.</p>
                                <p class="name">Ayşe Demir</p>
                                <span class="position">Müşteri</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-counter ftco-section img" id="section-counter">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@experience">0</strong>
                        <span>Yıllık <br>Tecrübe</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@totalCars">0</strong>
                        <span>Toplam <br>Araç</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text text-border d-flex align-items-center">
                        <strong class="number" data-number="@totalCustomers">0</strong>
                        <span>Mutlu <br>Müşteri</span>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-3 justify-content-center counter-wrap ftco-animate">
                <div class="block-18">
                    <div class="text d-flex align-items-center">
                        <strong class="number" data-number="@totalBranches">0</strong>
                        <span>Toplam <br>Şube</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>