@model IEnumerable<CarRentalPortal01.Models.Vehicle>

@{
    ViewData["Title"] = "Anasayfa";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="hero-wrap ftco-degree-bg" style="background-image: url('/frontend/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text justify-content-start align-items-center justify-content-center">
            <div class="col-lg-8 ftco-animate">
                <div class="text w-100 text-center mb-md-5 pb-md-5">
                    <h1 class="mb-4">Hızlı &amp; Kolay Araç Kiralama</h1>
                    <p style="font-size: 18px;">Hayalinizdeki yolculuğa çıkmak için en uygun aracı bulun. Konfor ve güven bir arada.</p>
                    <a href="https://vimeo.com/45830194" class="icon-wrap popup-vimeo d-flex align-items-center mt-4 justify-content-center">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="ion-ios-play"></span>
                        </div>
                        <div class="heading-title ml-5">
                            <span>Nasıl Kiralarım?</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form action="#" class="request-form ftco-animate bg-primary">
                            <h2>Seyahatini Planla</h2>
                            <div class="form-group">
                                <label for="" class="label">Alış Yeri</label>
                                <input type="text" class="form-control" placeholder="Şehir, Havalimanı vb.">
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Teslim Yeri</label>
                                <input type="text" class="form-control" placeholder="Şehir, Havalimanı vb.">
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Alış Tarihi</label>
                                    <input type="text" class="form-control" id="book_pick_date" placeholder="Tarih">
                                </div>
                                <div class="form-group ml-2">
                                    <label for="" class="label">Teslim Tarihi</label>
                                    <input type="text" class="form-control" id="book_off_date" placeholder="Tarih">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Alış Saati</label>
                                <input type="text" class="form-control" id="time_pick" placeholder="Saat">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Uygun Araçları Bul" class="btn btn-secondary py-3 px-4">
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Aracınızı Kiralamanın En İyi Yolu</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Konum Seçin</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">En İyi Teklifi Bulun</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Rezervasyonu Yapın</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="#" class="btn btn-primary py-3 px-4">Mükemmel Aracı Kirala</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12 heading-section text-center ftco-animate mb-5">
                <span class="subheading">Tekliflerimiz</span>
                <h2 class="mb-2">Öne Çıkan Araçlar</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="carousel-car owl-carousel">
                    
                    @if(Model != null && Model.Any())
                    {
                        @foreach (var car in Model)
                        {
                            <div class="item">
                                <div class="car-wrap rounded ftco-animate">
                                    <div class="img rounded d-flex align-items-end" style="background-image: url('/@car.ImageUrl');">
                                    </div>
                                    <div class="text">
                                        <h2 class="mb-0"><a href="#">@car.Brand @car.Model</a></h2>
                                        <div class="d-flex mb-3">
                                            <span class="cat">@car.GearType / @car.FuelType</span>
                                            <p class="price ml-auto">@car.DailyRentalRate.ToString("C0") <span>/gün</span></p>
                                        </div>
                                        <p class="d-flex mb-0 d-block">
                                            <a href="#" class="btn btn-primary py-2 mr-1">Kirala</a> 
                                            <a href="#" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <p>Şu anda vitrinde gösterilecek uygun araç bulunmuyor.</p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-about">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url('/frontend/images/about.jpg');">
            </div>
            <div class="col-md-6 wrap-about ftco-animate">
                <div class="heading-section heading-section-white pl-md-5">
                    <span class="subheading">Hakkımızda</span>
                    <h2 class="mb-4">Carbook'a Hoşgeldiniz</h2>

                    <p>Müşteri memnuniyetini ön planda tutan hizmet anlayışımızla, yolculuklarınızı keyfe dönüştürüyoruz. Geniş araç filomuz ve profesyonel ekibimizle hizmetinizdeyiz.</p>
                    <p>Güvenli, temiz ve bakımlı araçlarımızla, ister iş gezisi ister tatil olsun, her türlü ihtiyacınıza uygun çözümler sunuyoruz.</p>
                    <p><a href="#" class="btn btn-primary py-3 px-4">Araç Ara</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <span class="subheading">Hizmetler</span>
                <h2 class="mb-3">Son Hizmetlerimiz</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-wedding-car"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Düğün Arabası</h3>
                        <p>Özel günleriniz için lüks seçenekler.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-transportation"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Şehir İçi Transfer</h3>
                        <p>Hızlı ve güvenli şehir içi ulaşım.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-car"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Havalimanı Transfer</h3>
                        <p>Uçuş öncesi ve sonrası konforlu transfer.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="services services-2 w-100 text-center">
                    <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-transportation"></span></div>
                    <div class="text w-100">
                        <h3 class="heading mb-2">Şehir Turları</h3>
                        <p>Turistik gezileriniz için ideal araçlar.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-intro" style="background-image: url('/frontend/images/bg_3.jpg');">
    <div class="overlay"></div>
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-6 heading-section heading-section-white ftco-animate">
                <h2 class="mb-3">Bizimle Çalışmak İster misiniz?</h2>
                <a href="#" class="btn btn-primary btn-lg">Sürücü Ol</a>
            </div>
        </div>
    </div>
</section>

