@model IEnumerable<CarRentalPortal01.Models.Vehicle>

@{
    ViewData["Title"] = "Araç Filomuz";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/frontend/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2"><a href="/Home/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span>
                    <span>Araçlar <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Araç Filomuz</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">

            @if (Model != null && Model.Any())
            {
                @foreach (var car in Model)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end"
                                 style="background-image: url('/@car.ImageUrl');">
                            </div>

                            <div class="text">
                                <h2 class="mb-0"><a href="#">@car.Brand @car.Model</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@car.GearType / @car.FuelType</span>
                                    <p class="price ml-auto">@car.DailyRentalRate.ToString("C0") <span>/gün</span></p>
                                </div>

                                <p class="d-flex mb-0 d-block">
                                    <a href="#" class="btn btn-primary py-2 mr-1">Kirala</a>
                                    <a asp-controller="Cars" asp-action="CarDetail" asp-route-id="@car.Id" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <div class="alert alert-warning">
                        <h4>Şu anda kiralık uygun araç bulunmamaktadır.</h4>
                        <p>Lütfen daha sonra tekrar deneyiniz.</p>
                    </div>
                </div>
            }

        </div>

        <div class="row mt-5">
            <div class="col text-center">
                <div class="block-27">
                    <ul>
                        <li><a href="#">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
</section>