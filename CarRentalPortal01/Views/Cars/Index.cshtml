@model IEnumerable<CarRentalPortal01.Models.Vehicle>

@{
    ViewData["Title"] = "Araç Filomuz";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/frontend/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2"><a href="/Home/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span>
                    <span>Araçlar <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Araç Filomuz</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">

        <div class="row justify-content-center mb-5">
            <div class="col-md-10">
                <div class="card p-4 shadow-sm border-0">
                    <form asp-controller="Cars" asp-action="Index" method="get">
                        <div class="row">

                            <div class="col-md-4 mb-3">
                                <label class="text-muted small">Araç Arayın</label>
                                <input type="text" name="search" class="form-control"
                                       placeholder="Örn: BMW, Egea..."
                                       value="@ViewBag.Search">
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="text-muted small">Vites Tipi</label>
                                <select name="gearType" class="form-control">
                                    <option value="">Tümü</option>
                                    <!option value="Manuel" @(ViewBag.GearType == "Manuel" ? "selected" : "")>Manuel</!option>
                                    <!option value="Otomatik" @(ViewBag.GearType == "Otomatik" ? "selected" : "")>Otomatik</!option>
                                </select>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="text-muted small">Yakıt Tipi</label>
                                <select name="fuelType" class="form-control">
                                    <option value="">Tümü</option>
                                    <!option value="Benzin" @(ViewBag.FuelType == "Benzin" ? "selected" : "")>Benzin</!option>
                                    <!option value="Dizel" @(ViewBag.FuelType == "Dizel" ? "selected" : "")>Dizel</!option>
                                    <!option value="Elektrik" @(ViewBag.FuelType == "Elektrik" ? "selected" : "")>Elektrik</!option>
                                    <!option value="Hibrit" @(ViewBag.FuelType == "Hibrit" ? "selected" : "")>Hibrit</!option>
                                </select>
                            </div>

                            <div class="col-md-2 mb-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100 py-2">Uygula</button>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(ViewBag.Search) || !string.IsNullOrEmpty(ViewBag.GearType) || !string.IsNullOrEmpty(ViewBag.FuelType))
                        {
                            <div class="row mt-2">
                                <div class="col-12 text-center">
                                    <a href="/Cars/Index" class="text-danger small"><i class="ion-ios-close-circle"></i> Filtreleri Temizle</a>
                                </div>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var car in Model)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end"
                                 style="background-image: url('/@car.ImageUrl');">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="/Cars/CarDetail/@car.Id">@car.Brand @car.Model</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@car.GearType / @car.FuelType</span>
                                    <p class="price ml-auto">@car.DailyRentalRate.ToString("C0") <span>/gün</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block">
                                    <a href="/Cars/CarDetail/@car.Id" class="btn btn-primary py-2 mr-1">Kirala</a>
                                    <a href="/Cars/CarDetail/@car.Id" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <div class="alert alert-warning">
                        <h4>Aradığınız kriterlere uygun araç bulunamadı.</h4>
                        <p>Lütfen farklı bir arama yapmayı deneyin.</p>
                        <a href="/Cars/Index" class="btn btn-primary mt-2">Tüm Araçları Göster</a>
                    </div>
                </div>
            }
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li><a href="/Cars/Index?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search">&lt;</a></li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a href="/Cars/Index?page=@i&search=@ViewBag.Search">@i</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li><a href="/Cars/Index?page=&search=@ViewBag.Search&gearType=@ViewBag.GearType&fuelType=@ViewBag.FuelType"></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

    </div>
</section>