@model IEnumerable<CarRentalPortal01.Models.Vehicle>

@{
    ViewData["Title"] = "Araç Filomuz";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/frontend/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs">
                    <span class="mr-2"><a href="/Home/Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span>
                    <span>Araçlar <i class="ion-ios-arrow-forward"></i></span>
                </p>
                <h1 class="mb-3 bread">Araç Filomuz</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">

        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                <form asp-controller="Cars" asp-action="Index" method="get" class="search-form">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control p-4"
                               placeholder="Hangi aracı arıyorsunuz? (Örn: BMW, Egea...)"
                               value="@ViewBag.Search">
                        <div class="input-group-append">
                            <button class="btn btn-primary px-4" type="submit">Ara</button>
                            @if (!string.IsNullOrEmpty(ViewBag.Search))
                            {
                                <a href="/Cars/Index" class="btn btn-outline-danger px-3" title="Filtreyi Temizle">X</a>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var car in Model)
                {
                    <div class="col-md-4">
                        <div class="car-wrap rounded ftco-animate">
                            <div class="img rounded d-flex align-items-end"
                                 style="background-image: url('/@car.ImageUrl');">
                            </div>
                            <div class="text">
                                <h2 class="mb-0"><a href="/Cars/CarDetail/@car.Id">@car.Brand @car.Model</a></h2>
                                <div class="d-flex mb-3">
                                    <span class="cat">@car.GearType / @car.FuelType</span>
                                    <p class="price ml-auto">@car.DailyRentalRate.ToString("C0") <span>/gün</span></p>
                                </div>
                                <p class="d-flex mb-0 d-block">
                                    <a href="/Cars/CarDetail/@car.Id" class="btn btn-primary py-2 mr-1">Kirala</a>
                                    <a href="/Cars/CarDetail/@car.Id" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <div class="alert alert-warning">
                        <h4>Aradığınız kriterlere uygun araç bulunamadı.</h4>
                        <p>Lütfen farklı bir arama yapmayı deneyin.</p>
                        <a href="/Cars/Index" class="btn btn-primary mt-2">Tüm Araçları Göster</a>
                    </div>
                </div>
            }
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="row mt-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li><a href="/Cars/Index?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search">&lt;</a></li>
                            }

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                                    <a href="/Cars/Index?page=@i&search=@ViewBag.Search">@i</a>
                                </li>
                            }

                            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                            {
                                <li><a href="/Cars/Index?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search">&gt;</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

    </div>
</section>